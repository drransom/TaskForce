<% if form_type == :login %>
  <% header = "Log In" %>
  <% action = "/session" %>
<% else %>
  <% header = "Sign Up" %>
  <% action = "/user" %>
<% end %>

<h2><%= header %></h2>
<%= render partial: 'layouts/errors' %>

<form action="<%= action %>" method="post">
  <%= auth_token_input %>
  <label>Email<br>
    <input name="user[email]" type="text"<br>
  </label><br>
  <label>Password<br>
    <input name="user[password]" type="password"><br>
  </label><br>
  <input type="submit" value="Submit" class="btn btn-primary">
</form>
or <form action="/session" method="post">
  <%= auth_token_input %>
    <input type = "hidden" name="user[email]" value="luke@starwars.com">
    <input name="user[password]" type ="hidden" value="password">
    <input type="submit" value="Login as guest" class="btn btn-primary">
</form>
